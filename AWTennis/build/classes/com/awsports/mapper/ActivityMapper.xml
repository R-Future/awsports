	      <if test="detail != null and detail != ''">
	        #{detail,jdbcType=LONGVARCHAR},
	      </if>
	      <if test="note != null and note != ''">
	        #{note,jdbcType=LONGVARCHAR},
	      </if>
	    </trim>
	</insert>
</mapper>